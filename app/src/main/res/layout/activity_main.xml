<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar_main" android:id="@+id/toolbar_main"/>
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_below="@+id/toolbar_main"
        sothree:umanoPanelHeight="@dimen/drag_bar_height"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoParalaxOffset="100dp"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoScrollableView="@+id/scrollList">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MyActivity"
                android:layout_marginTop="@dimen/drag_bar_height" />
            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="empty"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:textSize="16sp"
                android:id="@+id/txtWho" />
            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="empty"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:id="@+id/txtWhat" />
        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_panel_and_drag_bar_height"
            android:background="#ffffff"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:gravity="bottom"
            android:id="@+id/dragView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sliding_panel_height"
                android:orientation="horizontal">
                <LinearLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="谁"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:text="我"
                            android:id="@+id/btnMe"
                            android:padding="5dp"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="儿女"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnChildren"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="父母"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnParents" />
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="情侣"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnCouple"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="朋友"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnFriend"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="同事"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnColleague"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="节日场合" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生日"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnBday"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="圣诞"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnXmas"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新年"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnNY"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="春节"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnCNY"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="儿童节"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnChildrenDay"/>
                        <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="母亲节"
                            android:textColor="@drawable/text_color_selector"
                            android:background="@drawable/button_selector"
                            android:id="@+id/btnMothersDay"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/drag_bar_height"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/actionbar_background">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/dragDownIcon"
                    android:src="@drawable/dragdown_icon"
                    android:clickable="true"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
